<div class="login-box">
    <div class="login-logo">
        <a href="/"><b>{{siteName}}</b></a>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">智慧互联 . 云享未来</p>
        <form action="/login" method="post">
            <div class="form-group has-feedback">
                <input type="text" class="form-control" placeholder="Email" name="username" value="jack">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Password" name="password" value="secret">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox"> 记住我
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">登录</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
        <a href="#">忘记密码</a>
        <br>
        <a href="/register" class="text-center">注册新账户</a>
        {{#if errorMsg}}
          <div class="alert alert-success" role="alert">{{ errorMsg }}</div>
        {{/if}}
    </div>
    <!-- /.login-box-body -->
</div>